<style>
    .ticket-container {
        max-width: 600px;
        margin: 0 auto;
    }
    
    .ticket-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        margin-bottom: 2rem;
        border-top: 5px solid #3498db;
    }
    
    .ticket-header {
        background: linear-gradient(90deg, #3498db, #2c3e50);
        color: white;
        padding: 1.5rem;
        text-align: center;
    }
    
    .ticket-header h1 {
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
        font-family: 'Poppins', sans-serif;
    }
    
    .ticket-number-display {
        font-size: 3rem;
        font-weight: 800;
        letter-spacing: 3px;
        color: #2ecc71;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        margin: 1rem 0;
    }
    
    .ticket-body {
        padding: 2rem;
    }
    
    .status-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
    }
    
    .status-waiting { background: #f39c12; color: white; }
    .status-in-progress { background: #3498db; color: white; }
    .status-served { background: #2ecc71; color: white; }
    .status-no-show { background: #e74c3c; color: white; }
    
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .info-item {
        text-align: center;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 8px;
    }
    
    .info-label {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        display: block;
    }
    
    .info-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2c3e50;
    }
    
    .info-unit {
        font-size: 0.9rem;
        color: #95a5a6;
        margin-left: 0.25rem;
    }
    
    .queue-visual {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
        margin: 2rem 0;
        position: relative;
    }
    
    .queue-position {
        position: relative;
        height: 60px;
        background: #e9ecef;
        border-radius: 30px;
        margin: 1rem 0;
        overflow: hidden;
    }
    
    .queue-progress {
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        background: linear-gradient(90deg, #2ecc71, #3498db);
        border-radius: 30px;
        width: <%= 100 - (ticket.patientsAhead / (ticket.patientsAhead + 5) * 100) %>%;
        transition: width 2s ease;
    }
    
    .queue-marker {
        position: absolute;
        right: 10%;
        top: 50%;
        transform: translateY(-50%);
        background: #e74c3c;
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .queue-labels {
        display: flex;
        justify-content: space-between;
        margin-top: 0.5rem;
        color: #7f8c8d;
        font-size: 0.9rem;
    }
    
    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }
    
    .notification-panel {
        background: #e8f4fc;
        border-left: 4px solid #3498db;
        padding: 1rem;
        border-radius: 8px;
        margin: 1.5rem 0;
    }
    
    .live-update {
        background: #2c3e50;
        color: white;
        padding: 0.8rem;
        border-radius: 8px;
        margin-top: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }
    
    .blink {
        animation: blink 1s infinite;
    }
    
    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
    
    @media (max-width: 768px) {
        .ticket-number-display {
            font-size: 2rem;
        }
        
        .info-value {
            font-size: 1.2rem;
        }
        
        .action-buttons {
            flex-direction: column;
        }
    }
</style>

<div class="ticket-container">
    <div class="ticket-card">
        <div class="ticket-header">
            <h1><i class="fas fa-ticket-alt"></i> Your Queue Ticket</h1>
            <div class="ticket-number-display">
                <%= ticket.ticketNumber %>
            </div>
            <div class="status-badge status-<%= ticket.status.replace('-', '') %>">
                <i class="fas fa-<%= ticket.status === 'waiting' ? 'clock' : ticket.status === 'in-progress' ? 'user-md' : 'check-circle' %>"></i>
                <%= ticket.status.replace('-', ' ').toUpperCase() %>
            </div>
        </div>
        
        <div class="ticket-body">
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Position in Queue</span>
                    <div class="info-value">
                        <%= ticket.patientsAhead + 1 %>
                        <span class="info-unit">/ <%= ticket.patientsAhead + 5 %></span>
                    </div>
                </div>
                
                <div class="info-item">
                    <span class="info-label">Patients Ahead</span>
                    <div class="info-value">
                        <%= ticket.patientsAhead %>
                        <span class="info-unit">patients</span>
                    </div>
                </div>
                
                <div class="info-item">
                    <span class="info-label">Estimated Wait</span>
                    <div class="info-value">
                        <%= ticket.estimatedWait %>
                        <span class="info-unit">minutes</span>
                    </div>
                </div>
                
                <div class="info-item">
                    <span class="info-label">Wait Time So Far</span>
                    <div class="info-value">
                        <%= ticket.waitTimeSoFar || 0 %>
                        <span class="info-unit">minutes</span>
                    </div>
                </div>
            </div>
            
            <% if (ticket.status === 'waiting') { %>
                <div class="queue-visual">
                    <h3 style="color: #2c3e50; margin-bottom: 1rem; text-align: center;">
                        <i class="fas fa-chart-line"></i> Your Queue Progress
                    </h3>
                    
                    <div class="queue-position">
                        <div class="queue-progress"></div>
                        <div class="queue-marker">
                            <%= ticket.patientsAhead + 1 %>
                        </div>
                    </div>
                    
                    <div class="queue-labels">
                        <span>Start</span>
                        <span>Your Position</span>
                        <span>Counter</span>
                    </div>
                    
                    <div class="notification-panel">
                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 0.5rem;">
                            <i class="fas fa-bell" style="color: #3498db;"></i>
                            <strong>Notifications Active</strong>
                        </div>
                        <p style="margin: 0; color: #555;">
                            <% if (ticket.phone) { %>
                                You'll receive SMS when you're 2 patients away.
                            <% } else { %>
                                Refresh this page for updates. You're <%= ticket.patientsAhead %> patients away.
                            <% } %>
                        </p>
                    </div>
                </div>
                
                <div class="live-update blink" id="liveUpdate">
                    <i class="fas fa-sync-alt"></i>
                    <span>Live updates active</span>
                    <span id="lastUpdate">Updated just now</span>
                </div>
            <% } %>
            
            <% if (ticket.status === 'in-progress') { %>
                <div style="text-align: center; padding: 2rem; background: #e8f4fc; border-radius: 10px; margin: 1.5rem 0;">
                    <div style="font-size: 4rem; color: #3498db; margin-bottom: 1rem;">
                        <i class="fas fa-user-md"></i>
                    </div>
                    <h2 style="color: #2c3e50;">Your Turn Now!</h2>
                    <p style="color: #555; margin: 1rem 0;">
                        Please proceed to the consultation room.
                    </p>
                    <div style="background: #2ecc71; color: white; padding: 1rem; border-radius: 8px; display: inline-block;">
                        <i class="fas fa-arrow-right"></i> Go to Counter 2
                    </div>
                </div>
            <% } %>
            
            <% if (ticket.status === 'served') { %>
                <div style="text-align: center; padding: 2rem;">
                    <div style="font-size: 4rem; color: #2ecc71; margin-bottom: 1rem;">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h2 style="color: #2c3e50;">Service Completed</h2>
                    <p style="color: #555; margin: 1rem 0;">
                        Thank you for visiting. Your total wait time was <%= ticket.waitTimeSoFar %> minutes.
                    </p>
                </div>
            <% } %>
            
            <div class="action-buttons">
                <a href="/queue-status" class="btn" style="flex: 1;">
                    <i class="fas fa-list-ol"></i> View Full Queue
                </a>
                
                <% if (ticket.canRejoin) { %>
                    <a href="/rejoin/<%= ticket.ticketNumber %>" class="btn btn-primary" style="flex: 1;">
                        <i class="fas fa-redo"></i> Rejoin Queue
                    </a>
                <% } else { %>
                    <button onclick="checkStatus()" class="btn btn-primary" style="flex: 1;">
                        <i class="fas fa-sync"></i> Refresh Status
                    </button>
                <% } %>
                
                <a href="/join-queue" class="btn" style="flex: 1;">
                    <i class="fas fa-plus"></i> New Ticket
                </a>
            </div>
            
            <div style="margin-top: 2rem; padding: 1rem; background: #f8f9fa; border-radius: 8px;">
                <h4 style="color: #2c3e50; margin-bottom: 0.5rem;">
                    <i class="fas fa-info-circle"></i> Ticket Information
                </h4>
                <div style="display: grid; grid-template-columns: auto 1fr; gap: 0.5rem; font-size: 0.9rem;">
                    <span style="color: #7f8c8d;">Joined:</span>
                    <span><%= new Date(ticket.createdAt).toLocaleString() %></span>
                    
                    <% if (ticket.phone) { %>
                        <span style="color: #7f8c8d;">Phone:</span>
                        <span><%= ticket.phone %></span>
                    <% } %>
                    
                    <% if (ticket.servedAt) { %>
                        <span style="color: #7f8c8d;">Served:</span>
                        <span><%= new Date(ticket.servedAt).toLocaleString() %></span>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <div style="text-align: center; color: #7f8c8d; margin-top: 1rem;">
        <i class="fas fa-mobile-alt"></i>
        Save this link to check your status later:
        <div style="margin-top: 0.5rem; word-break: break-all; background: #f8f9fa; padding: 0.5rem; border-radius: 5px;">
            <span id="ticketUrl">https://clinic-queue.com/ticket/<%= ticket.ticketNumber %></span>
            <button onclick="copyUrl()" style="background: none; border: none; color: #3498db; cursor: pointer; margin-left: 0.5rem;">
                <i class="fas fa-copy"></i> Copy
            </button>
        </div>
    </div>
</div>

<script>
    let updateCount = 0;
    
    function checkStatus() {
        const ticketNumber = '<%= ticket.ticketNumber %>';
        fetch(`/patient/check/${ticketNumber}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    updateCount++;
                    document.getElementById('lastUpdate').textContent = 
                        `Updated ${updateCount} times`;
                    
                    // If status changed, refresh page
                    if (data.status !== '<%= ticket.status %>') {
                        setTimeout(() => location.reload(), 1000);
                    }
                }
            })
            .catch(error => console.error('Error:', error));
    }
    
    function copyUrl() {
        const url = document.getElementById('ticketUrl').textContent;
        navigator.clipboard.writeText(url).then(() => {
            alert('Link copied to clipboard!');
        });
    }
    
    // Auto-refresh for waiting patients
    <% if (ticket.status === 'waiting') { %>
        // Initial check after 30 seconds
        setTimeout(checkStatus, 30000);
        
        // Then every 60 seconds
        setInterval(checkStatus, 60000);
    <% } %>
    
    // Update time every minute
    setInterval(() => {
        const lastUpdate = document.getElementById('lastUpdate');
        if (lastUpdate) {
            const text = lastUpdate.textContent;
            if (text.includes('just now')) {
                lastUpdate.textContent = 'Updated 1 min ago';
            } else if (text.includes('min ago')) {
                const mins = parseInt(text.match(/\d+/)[0]) + 1;
                lastUpdate.textContent = `Updated ${mins} min ago`;
            }
        }
    }, 60000);
</script>